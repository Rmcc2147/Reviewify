{
    "name": "Amazon comment rearranger",
    "version": "1.0",
    "description": "Print out Amazon reviews.",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "storage"
    ],
    "background": {
      "scripts": [
        "backgroundScripts/background.js",
        "backgroundScripts/backgroundExtData.js"
      ],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://*.amazon.co.uk/*", "*://*.amazon.com/*"],
        "js": [
          "libraries/mozPolyfill/browser-polyfill.js",
          "libraries/jQuery/jquery-3.3.1.min.js",
          "libraries/nlp/removeStopWords.js",
          "contentScripts/reload_setup.js",
          "contentScripts/reviewGrabber.js",
          "contentScripts/reviewDOM_Logic.js",
          "contentScripts/reviewContentManipulator.js",
          "contentScripts/reviewAppender.js",
          "contentScripts/storageAccess.js",
          "contentScripts/keyWords.js",
          "contentScripts/misc.js"
        ]
      }
    ],
    "page_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }
